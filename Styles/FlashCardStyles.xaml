<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Text" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Raleway}" />
    </Style>

    <Style x:Key="ShowAnserButton" TargetType="Button">
        <Setter Property="FontFamily" Value="{DynamicResource Raleway}" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Background" Value="{DynamicResource showAnserButtonBack}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>