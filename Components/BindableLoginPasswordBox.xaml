<UserControl x:Class="FlashCards.Desktop.Components.BindableLoginPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlashCards.Desktop.Components"
             mc:Ignorable="d">
    <PasswordBox Style="{StaticResource LoginPasswordBoxStyle}" x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/Images/padlock.png" Stretch="Uniform"
                            AlignmentX="Left"/>
        </PasswordBox.Background>
     </PasswordBox>

</UserControl>
